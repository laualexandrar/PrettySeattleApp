<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvItemFutureEventsHour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:gravity="right|bottom"
                android:textSize="30sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvItemFutureEventsAMPM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A.M."
                android:gravity="right|top"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/tvItemFutureEventsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre de la actividad"
                android:textSize="20sp"
                android:textColor="@color/design_default_color_primary_dark"
                android:ellipsize="end"
                android:lines="1"/>

            <TextView
                android:id="@+id/tvItemFutureEventsNeightborhood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Barrio"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:ellipsize="end"
                android:lines="1"/>

            <TextView
                android:id="@+id/tvItemFutureEventsTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tag"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="#FFFFFF"
                android:background="@drawable/shape_tropico"/>

        </LinearLayout>

    </LinearLayout>

<!--    <view-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="1dp"-->
<!--        android:background="@color/colorAccent"/>-->


</LinearLayout>